<body>

  <h1>ðŸŒ± EcoLearn Quiz Demo</h1>

  <div class="quiz-card" id="quiz-card">
    <p id="question">Loading question...</p>
    <div id="options"></div>
  </div>

  <div class="score-board">
    Score: <span id="score">0</span>
  </div>
  <div id="badge-container"></div>

  <script>
    const quizData = [
      {
        question: "Which of these is a renewable energy source?",
        options: ["Coal", "Solar", "Petrol", "Natural Gas"],
        answer: "Solar"
      },
      {
        question: "What is the most common material for recycling?",
        options: ["Glass", "Plastic", "Wood", "Stone"],
        answer: "Plastic"
      },
      {
        question: "Which action saves water?",
        options: ["Leaving tap running", "Fixing leaks", "Wasting water", "None"],
        answer: "Fixing leaks"
      }
    ];

    let currentQuestion = 0;
    let score = 0;

    function loadQuestion() {
      const q = quizData[currentQuestion];
      document.getElementById("question").innerText = q.question;
      const optionsDiv = document.getElementById("options");
      optionsDiv.innerHTML = "";
      q.options.forEach(option => {
        const btn = document.createElement("button");
        btn.innerText = option;
        btn.onclick = () => checkAnswer(option);
        optionsDiv.appendChild(btn);
      });
    }

    function checkAnswer(selected) {
      const q = quizData[currentQuestion];
      if (selected === q.answer) {
        score += 10;
        document.getElementById("score").innerText = score;
      }
      currentQuestion++;
      if (currentQuestion < quizData.length) {
        loadQuestion();
      } else {
        showBadge();
      }
    }

    function showBadge() {
      const badgeContainer = document.getElementById("badge-container");
      badgeContainer.innerHTML = <div class="badge">ðŸŒŸ Eco Learner Badge Earned! ðŸŒŸ</div>;
      document.getElementById("quiz-card").innerHTML = "<p>Quiz Completed! Great job!</p>";
    }

    loadQuestion();
  </script>

</body>
